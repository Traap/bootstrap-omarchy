# Define and export helper functions
say()          { echo -e "$*"; }
sayAndDo()     { say "${1}" ${1}; }
log_bar()      { say "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"; }
log_info()     { say "ðŸ§© $*"; }
log_warn()     { say "âš ï¸ $*"; }
log_pass()     { say "âœ… $*"; }
log_fail()     { say "âŒ $*"; }
have_cmd()     { command -v "$1" &>/dev/null; }
root_required() {
  if [[ $EUID -ne 0 ]]; then
    echo "Please run this script as root (sudo)."
    exit 1
  fi
}
# Export helper functions so child scripts can use them without re-sourcing.
export -f say
export -f sayAndDo
export -f log_bar
export -f log_info
export -f log_warn
export -f log_pass
export -f log_fail
export -f have_cmd
export -f root_required
