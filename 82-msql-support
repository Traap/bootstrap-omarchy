#!/usr/bin/env bash
# 97-thinkpad-support â€” Omarchy ThinkPad setup (sudo-safe, idempotent, non-fatal)
set -euo pipefail

# ---------------------------------------------------------------------------
# Flag check
# ---------------------------------------------------------------------------
if [[ ${sqlFlag:-false} == true ]]; then
  log_info "Installing MS SQL support."
else
  log_warn "MS SQL support skipped."
  return;
fi

# Install MS SQL Suppport
sudo pacman -S --needed unixodbc freetds

